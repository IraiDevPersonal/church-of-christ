---
type Props = {
  imageSrc?: string;
  className?: string;
};

const { imageSrc = "piedra-angular.png", className } = Astro.props;
---

<a
  class="bg-neutral-200 w-full h-80 xs:h-96 md:h-48 rounded-md shadow-lg overflow-hidden hover:scale-95 transition-[scale,box-shadow] cursor-pointer hover:shadow-2xl duration-300 bg-cover bg-center"
  style={`background-image: url('/src/assets/images/${imageSrc}');`}
>
  <div
    class:list={[
      "h-full w-full bg-black/50 p-2 grid place-content-center",
      "font-semibold text-neutral-50 text-2xl",
      className,
    ]}
  >
    <h3>
      <slot />
    </h3>
  </div>
</a>
